---
import { Picture } from '@astrojs/image/components'
import { tw } from '@nrsk/tw'

import Header from '@/components/Header.astro'
import avatar from '@/assets/images/avatar-bw.png'

const sectionClasses = tw`
  flex flex-col-reverse sm:flex-row justify-between
`

const headerClasses = tw`
  pr-0 sm:pr-14
`

const headingClasses = tw`
  text-3xl md:text-5xl font-bold tracking-tight
  text-black dark:text-white
`

const aboutClasses = tw`
  text-gray-700 dark:text-gray-300
`

const photoClasses = tw`
  w-24 sm:w-32 mb-8 sm:mb-0
  select-none rounded-full
`
---

<section class={sectionClasses}>
  <Header class={headerClasses}>
    <h1 slot="heading" class={headingClasses}>
      Howdy! I'm Vlad.
    </h1>

    <p slot="sub" class={aboutClasses}>
      A <strong>TypeScript</strong> devotee, <strong>Rust</strong> tyro, and front-end shepherd.
      Interested in functional programming, compilers and PL design.
    </p>
  </Header>

  <Picture
    src={avatar}
    class={photoClasses}
    title="Hey, that's me!"
    alt="Vladislav's photo, black and white, in full face"
    aspectRatio={1}
    widths={[256, 512]}
    sizes="(min-width: 640px) 512px, 256px"
  />
</section>
