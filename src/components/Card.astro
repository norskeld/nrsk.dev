---
export interface Props {
  tag?: keyof HTMLElementTagNameMap
  to?: string
  justify?: boolean
}

const { tag: Element = 'div', justify = false, to } = Astro.props

const containerClasses = {
  'card-container': true,
  'justify-between': justify
}
---

<Element class="card-wrapper" href={to}>
  <article class:list={containerClasses}>
    <header class="card-header">
      <slot name="header" />
    </header>

    <footer class="card-footer">
      <slot name="footer" />
    </footer>
  </article>
</Element>

<style>
.card-wrapper {
  @apply
    block w-full p-1 hover:scale-[1.01] rounded-xl
    hover:shadow-xl hover:bg-gradient-to-br transition
    hover:from-crayola-200 hover:to-crayola-500 bg-gray-800;
}

:global(.dark .card-wrapper) {
  @apply bg-gray-200;
}

.card-container {
  @apply flex flex-col gap-4 h-full p-4 rounded-lg bg-white;
}

:global(.dark .card-container) {
  @apply bg-gray-900;
}

.card-header {
  @apply flex flex-col md:flex-row justify-between;
}

.card-footer {
  @apply text-gray-800;
}

:global(.dark .card-footer) {
  @apply text-gray-200;
}
</style>
