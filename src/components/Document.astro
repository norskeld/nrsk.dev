---
import { SEO, type Props as AstroSeo } from 'astro-seo'
import { tw } from '@nrsk/tw'

import ScriptTheme from '@/components/ScriptTheme.astro'

import { Common } from '@/config'

import '@/styles/global.css'

export interface Props extends AstroSeo {}

const wrapperClasses = tw`
  flex flex-col gap-12 sm:gap-16
  min-h-screen
`
---

<!DOCTYPE html>
<html lang={Common.localeSite} prefix="og: https://ogp.me/ns#">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content={Common.themeLight} />

    <!-- OpenGraph & other essential props like `title` and `description`. -->

    <SEO {...Astro.props} />

    <!-- Fonts. -->

    <link
      rel="preload"
      href="/fonts/inter-var-latin.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <style is:inline>
      @font-face {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 100 900;
        font-display: optional;
        src: url('/fonts/inter-var-latin.woff2') format('woff2');
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC,
          U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
      }
    </style>

    <!-- Favicons & Webmanifest. -->

    <link rel="icon" href="/favicons/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicons/favicon.svg" type="image/svg+xml" />
    <link rel="manifest" href="/site.webmanifest" />

    <link href="/favicons/apple-touch-icon.png" rel="apple-touch-icon" sizes="180x180" />
    <link href="/favicons/favicon-32x32.png" rel="icon" sizes="32x32" type="image/png" />
    <link href="/favicons/favicon-16x16.png" rel="icon" sizes="16x16" type="image/png" />
    <link href="/favicons/safari-pinned-tab.svg" rel="mask-icon" color="#006ae6" />
  </head>

  <body>
    <ScriptTheme />

    <div class={wrapperClasses}>
      <slot />
    </div>
  </body>
</html>
