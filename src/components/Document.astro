---
import { SEO, type Props as AstroSeo } from 'astro-seo'
import { tw } from '@nrsk/tw'

import ScriptTheme from '@/components/ScriptTheme.astro'

import { Common } from '@/config'

export interface Props extends AstroSeo {}

const wrapperClasses = tw`
  flex flex-col items-center gap-16 sm:gap-20
  min-h-screen
`
---

<!DOCTYPE html>
<html lang={Common.localeSite} prefix="og: https://ogp.me/ns#" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content={Common.themeDark} />

    <!-- Fonts. -->

    <link
      rel="preload"
      href="/fonts/inter-var-latin.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <style is:inline>
      @font-face {
        font-family: 'Inter';
        font-weight: 400 900;
        font-display: optional;
        src: url('/fonts/inter-var-latin.woff2') format('woff2');
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC,
          U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
      }
    </style>

    <!-- Favicons & Webmanifest. -->

    <link rel="manifest" href="/site.webmanifest" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- OpenGraph & other essential props like `title` and `description`. -->

    <SEO {...Astro.props} />
  </head>

  <body>
    <ScriptTheme />

    <div class={wrapperClasses}>
      <slot />
    </div>
  </body>
</html>
