---
import { Picture } from '@astrojs/image/components'
import { tw } from '@nrsk/tw'

import avatar from '@/assets/images/avatar-bw.png'

interface Props {
  class?: string
}

const { class: className } = Astro.props

const pictureClasses = tw`
  rounded-full
`
---

<Picture
  src={avatar}
  class:list={[pictureClasses, className]}
  title="Hey, that's me!"
  alt="Vladislav's photo, black and white, in full face"
  aspectRatio={1}
  widths={[128, 256]}
  sizes="(min-width: 640px) 256px, 128px"
/>
