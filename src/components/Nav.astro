---
import ThemeSwitcher from './ThemeSwitcher.astro'
import NavItem from './NavItem.astro'
import Logo from './Logo.astro'
---

<nav class="flex items-center justify-between w-full relative border-gray-200 dark:border-gray-700 pt-8 pb-8 sm:pb-16 text-gray-900 dark:text-gray-100">
  <a href="#skip" class="skip-nav">
    Skip to content
  </a>

  <div class="flex items-center">
    <a href="/">
      <Logo />
    </a>

    <NavItem to="/blog" url={Astro.url}>Blog</NavItem>
    <NavItem to="/snippets" url={Astro.url}>Snippets</NavItem>
  </div>

  <ThemeSwitcher />
</nav>
