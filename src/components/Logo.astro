---
import { Site } from '@/site.config'

const cssVariables = {
  'theme-dark': Site.themeDark,
  'theme-light': Site.themeLight
}
---

<div class="logo-container">
  <svg
    aria-labelledby="logo-title"
    focusable="false"
    role="img"
    class="h-8" xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 384 384"
  >
    <title id="logo-title">
      Go to the main page
    </title>

    <defs>
      <linearGradient id="gradient" gradientTransform="rotate(45)">
        <stop offset="0%" class="stop stop-from" />
        <stop offset="100%" class="stop stop-to" />
      </linearGradient>
    </defs>

    <path
      fill="url(#gradient)"
      fill-rule="evenodd"
      d="M96 208v160a16 16 0 0 1-16 16H0V208a16 16 0 0 1 16-16h64a16 16 0 0 1 16 16Zm288 0v176h-80a16 16 0 0 1-16-16V208a16 16 0 0 1 16-16h64a16 16 0 0 1 16 16ZM86.4 0a16 16 0 0 1 14.1 8.5L240.1 273a16 16 0 0 1 .1 14.7L210 348a16 16 0 0 1-28.5.3L0 0h86.4ZM384 0l-91.6 183.2a16 16 0 0 1-14.3 8.8H218a16 16 0 0 1-14.3-23.2l80-160A16 16 0 0 1 297.9 0H384Z"
    />
  </svg>
</div>

<style define:vars={cssVariables}>
.stop {
  @apply transition-[stop-color];
}

.stop-from {
  @apply [stop-color:var(--theme-dark)];
}

:global(.dark .stop-from) {
  @apply [stop-color:var(--theme-light)];
}

.stop-to {
  @apply [stop-color:var(--theme-dark)];
}

:global(.dark .stop-to) {
  @apply [stop-color:var(--theme-light)];
}

.logo-container {
  @apply hover:cursor-pointer;
}

.logo-container:hover .stop-from {
  @apply [stop-color:theme(colors.crayola.200)];
}

.logo-container:hover .stop-to {
  @apply [stop-color:theme(colors.crayola.500)];
}
</style>
