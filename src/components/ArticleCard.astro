---
export interface Props {
  slug: string
  title: string
}

const { slug, title } = Astro.props
---

<a href={`/blog/${slug}`} class="card-transitions scale-100 hover:scale-[1.02] hover:shadow-xl rounded-xl w-full md:w-1/3 bg-gray-700 dark:bg-gray-200 p-1 hover:bg-gradient-to-br hover:from-[#BDDCFF] hover:to-[#0070F3]">
  <div class="flex flex-col justify-between h-full rounded-lg p-4 bg-white dark:bg-gray-900">
    <div class="flex flex-col md:flex-row justify-between">
      <h4 class="text-lg md:text-lg font-medium tracking-tight mb-4 w-full text-gray-900 dark:text-gray-100">
        {title}
      </h4>
    </div>

    <div class="flex items-center text-gray-800 dark:text-gray-200">
      <span class="align-baseline">
        20 Aug, 2022
      </span>
    </div>
  </div>
</a>

<style>
.card-transitions {
  transform-origin: center center;
  transition-property: box-shadow, transform, background-color;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  transition-duration: 150ms;
}
</style>
