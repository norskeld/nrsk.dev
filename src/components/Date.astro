---
import { formatDate } from '@/api/utils'

type DateLike = Date | string | number

export interface Props {
  date: DateLike
  format?: string
  class?: string
}

const { date, format = 'd MMM yyyy', class: className } = Astro.props

const createdAt = formatDate(date, format)
const createdAtDatetime = formatDate(date, 'yyyy-MM-dd')
---

<time class={className} datetime={createdAtDatetime}>
  {createdAt}
</time>
