---
import { slideVertically } from '@/api/transitions'

import FooterItem from './FooterItem.astro'
import Link from './Link.astro'
import Dot from './Dot.astro'
---

<footer
  class:list={[
    "flex w-full max-w-2xl",
    "mt-auto px-8 md:px-0 pt-8 pb-16"
  ]}
  transition:animate={slideVertically({ duration: '200ms' })}
>
  <FooterItem>&copy; 2021&ndash;present</FooterItem>

  <Dot />

  <FooterItem>
    Built with <Link to="https://astro.build" external underline>Astro</Link>
  </FooterItem>
</footer>
