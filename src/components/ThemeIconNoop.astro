---
export interface Props {
  id: string
  class?: string
}

const { id, class: className } = Astro.props
---

<svg
  id={id}
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 20 20"
  class={className}
  aria-hidden="true"
  focusable="false"
  fill="currentColor"
  fill-opacity="0.5"
>
  <title>Sorry, you can't change theme since JavaScript is disabled.</title>

  <circle
    r="4"
    cx="12"
    cy="12"
    transform="translate(-2 -2)"
    fill-rule="evenodd"
  />
</svg>
