---
export interface Props {
  title: string
  class?: string
  description?: string
}

const { title, class: className, description } = Astro.props
---

<header
  class:list={[
    "flex flex-col gap-4",
    "w-full"
  ]}
>
  <h1
    class:list={[
      "text-2xl font-semibold",
      "text-black dark:text-white",
      className
    ]}
  >
    {title}
  </h1>

  {description && <p class="text-gray-500 dark:text-gray-400">{description}</p>}
</header>
