---
export interface Props {
  level?: number
  title?: string
  class?: string
}

const { level = 1, title, class: className } = Astro.props

const Element = `h${level}`
---

<Element
  class:list={[
    "text-2xl font-semibold",
    "text-gray-900 dark:text-gray-50",
    className
  ]}
>
  {Astro.slots.has('default') ? <slot /> : title}
</Element>
