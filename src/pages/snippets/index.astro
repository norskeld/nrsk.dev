---
import { loadSnippets } from '@/api/content/snippets'
import { unslash } from '@/api/utils'

import { withSeoOptions, Common } from '@/config'

import SnippetList from '@/screens/snippets/SnippetList.astro'
import PageHeader from '@/components/PageHeader.astro'
import Page from '@/layouts/Page.astro'

const snippets = await loadSnippets({
  sort: 'desc'
})

const title = `Snippets â€“ ${Common.title}`
const description = 'Code snippets in a variety of programming languages for various purposes.'

const props = withSeoOptions({
  title,
  description,
  canonical: unslash(Astro.url.href),
  openGraph: {
    basic: {
      title: 'Snippets',
      type: 'website',
      url: unslash(Astro.url.href)
    },
    optional: {
      description
    }
  }
})
---

<Page {...props}>
  <PageHeader
    title="Snippets"
    description="This is a collection of code snippets and short notes that will serve as quick reminders."
  />

  <SnippetList items={snippets} />
</Page>
