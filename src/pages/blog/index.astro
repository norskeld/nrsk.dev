---
import ArticleList from '@/screens/blog/ArticleList.astro'
import Page from '@/layouts/Page.astro'

import { withSeoOptions, Common } from '@/site.config'
import { loadArticles } from '@/api/articles'
import { unslash } from '@/utils'

const articles = await loadArticles({
  sort: 'desc'
})

const title = `Blog â€“ ${Common.title}`
const description = 'Articles and notes about software development.'

const props = withSeoOptions({
  title,
  description,
  canonical: unslash(Astro.url.href),
  openGraph: {
    basic: {
      title: 'Blog',
      type: 'website',
      url: unslash(Astro.url.href)
    },
    optional: {
      description
    }
  }
})
---

<Page {...props}>
  <ArticleList articles={articles} />
</Page>
