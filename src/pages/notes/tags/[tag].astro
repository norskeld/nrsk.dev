---
import { loadNotes, type NoteEntry } from '@/api/content'
import { unslash } from '@/api/utils'

import { withSeoOptions, Common } from '@/config'

import PageHeader from '@/components/PageHeader.astro'
import NoteList from '@/screens/notes/NoteList.astro'
import Page from '@/layouts/Page.astro'

export interface Props {
  tag: string
  notes: Array<NoteEntry>
}

export async function getStaticPaths() {
  const entries = await loadNotes()

  const tags = new Set(entries.map((entry) => entry.data.tags).flat())

  return [...tags].map((tag) => {
    const notes = entries.filter((entry) => entry.data.tags.includes(tag))

    return {
      params: { tag },
      props: { tag, notes }
    }
  })
}

const { tag, notes } = Astro.props

const title = `Notes tagged '${tag}' â€“ ${Common.title}`
const description = `Notes tagged '${tag}'.`

const props = withSeoOptions({
  title,
  description,
  canonical: unslash(Astro.url.href),
  openGraph: {
    basic: {
      title: `Notes tagged '${tag}'`,
      type: 'website',
      url: unslash(Astro.url.href)
    },
    optional: {
      description
    }
  }
})
---

<Page {...props}>
  <PageHeader title={`#${tag}`} />

  <NoteList items={notes} />
</Page>
