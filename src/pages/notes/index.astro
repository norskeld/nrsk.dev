---
import { loadNotes } from '@/api/content'
import { unslash } from '@/api/utils'

import { withSeoOptions, Common } from '@/config'

import PageHeader from '@/components/PageHeader.astro'
import NoteList from '@/screens/notes/NoteList.astro'
import Page from '@/layouts/Page.astro'

const snippets = await loadNotes({
  sort: 'desc'
})

const title = `Notes â€“ ${Common.title}`
const description =
  'Short notes and code snippets in a variety of programming languages for various purposes.'

const props = withSeoOptions({
  title,
  description,
  canonical: unslash(Astro.url.href),
  openGraph: {
    basic: {
      title: 'Notes',
      type: 'website',
      url: unslash(Astro.url.href)
    },
    optional: {
      description
    }
  }
})
---

<Page {...props}>
  <PageHeader
    title="Notes"
    description="This is a collection of short notes and code snippets that will serve as quick reminders."
  />

  <NoteList items={snippets} />
</Page>
